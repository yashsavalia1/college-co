{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "jsx-quotes": [
      "warn",
      "prefer-double"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "no-tabs": 1,
    "indent": [
      "warn",
      2
    ],
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 80,
        "ignoreStrings": true,
        "ignoreComments": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ]
  }
}